<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout tools:context=".RegistroActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="181dp"
        android:layout_height="239dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/imageViewLogo_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shop_icon" />

    <ImageView android:layout_height="48dp"
        android:layout_width="48dp"
        app:srcCompat="@drawable/ic_mas"
        app:layout_constraintTop_toTopOf="@+id/imageViewLogo"
        android:contentDescription="@string/imageView1"
        android:layout_marginStart="4dp"
        android:id="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:background="@drawable/bodes"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:hint="@string/editTextTextEmailAddress_hint"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <EditText
        android:id="@+id/editTextPassword"
        android:hint="@string/editTextPassword_hint"
        android:layout_width="303dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:background="@drawable/bodes"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="15"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <EditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="302dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:background="@drawable/bodes"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="4dp"
        android:ems="10"
        android:hint="@string/editTextPasswordConfirm_hint"
        android:inputType="textPassword"
        android:maxLength="15"
        app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:background="@drawable/bodes"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/buttonRegistrarse_text"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordConfirm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordConfirm"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordConfirm" />

    <Button
        android:id="@+id/buttonRegistrarALogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bodes"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/buttonRegistrarALogin_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>