<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondogradiente"
    tools:context=".DetallePedido">

    <Button
        android:id="@+id/buttonRegresar"
        android:layout_width="124dp"
        android:layout_height="53dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bordesboton"
        android:text="@string/buttonRegresar"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTotalDetPed"
        app:layout_constraintStart_toStartOf="@+id/textViewTotalDetPed" />

    <ListView
        android:id="@+id/listViewDetallesPedido"
        android:layout_width="356dp"
        android:layout_height="479dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:headerDividersEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textViewTotalDetPed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTotalDetPed"
        android:layout_width="193dp"
        android:layout_height="36dp"
        android:layout_marginBottom="36dp"
        android:text="@string/textViewTotalDetPed"
        android:textColor="#1E8A0B"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegresar"
        app:layout_constraintEnd_toEndOf="@+id/listViewDetallesPedido"
        app:layout_constraintStart_toStartOf="@+id/listViewDetallesPedido" />

</androidx.constraintlayout.widget.ConstraintLayout>